{
  "name": "richdiary-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NODE_ENV=production dotenv -e .env.production -- nest start",
    "start:dev": "cross-env NODE_ENV=development dotenv -e .env.development -- nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production dotenv -e .env.production -- pm2-runtime start ./ecosystem.config.js",
    "predeploy": "npm ci && npm run build",
    "deploy": "cross-env NODE_ENV=production dotenv -e .env.production -- npm run start:prod",
    "preredeploy": "npm ci && npm run build",
    "redeploy": "cross-env NODE_ENV=production dotenv -e .env.production -- pm2-runtime reload ./ecosystem.config.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "dotenv -e .env.test -- jest",
    "test:watch": "dotenv -e .env.test -- jest --watch",
    "test:cov": "dotenv -e .env.test -- jest --coverage",
    "test:debug": "dotenv -e .env.test -- node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e .env.test -- jest --config ./test/jest-e2e.json",
    "db:push:test": "dotenv -e .env.test -- npx prisma db push",
    "db:push:dev": "dotenv -e .env.development -- npx prisma db push",
    "db:push:prod": "dotenv -e .env.production -- npx prisma db push",
    "compose:prod": "docker-compose up -d",
    "compose:dev": "docker-compose -f ./docker-compose.dev.yml up -d"
  },
  "dependencies": {
    "@liaoliaots/nestjs-redis": "^9.0.5",
    "@nestjs-modules/mailer": "^1.10.3",
    "@nestjs/common": "^10.2.10",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.10",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.2.10",
    "@nestjs/swagger": "^7.3.1",
    "@prisma/client": "^5.6.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.10",
    "ioredis": "^5.3.2",
    "jest-mock-extended": "^3.0.5",
    "joi": "^17.11.0",
    "kysely": "^0.26.3",
    "nest-winston": "^1.9.4",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.7",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-kakao": "^1.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "prisma-extension-pagination": "^0.5.0",
    "prisma-kysely": "^1.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "ts-parse-database-url": "^1.0.3",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.2.10",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.9",
    "@types/node": "^20.9.3",
    "@types/node-fetch": "^2.6.10",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-kakao": "^1.0.3",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "29.7.0",
    "jest-extended": "^4.0.2",
    "prettier": "^3.1.0",
    "prisma": "^5.6.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "~5.3.2"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "node_modules",
      "main.ts",
      ".entity.ts",
      ".decorator.ts",
      ".guard.ts",
      ".middleware.ts",
      ".module.ts",
      ".dto.ts",
      ".constants.ts"
    ]
  }
}
